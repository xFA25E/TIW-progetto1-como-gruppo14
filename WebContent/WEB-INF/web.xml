<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
                             http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">
    <display-name>Bank</display-name>

    <context-param>
		<param-name>dbUrl</param-name>
		<param-value>jdbc:mysql://localhost:3306/dbtest</param-value>
	</context-param>

	<context-param>
		<param-name>dbUser</param-name>
		<param-value>val</param-value>
	</context-param>

	<context-param>
		<param-name>dbPassword</param-name>
		<param-value>val</param-value>
	</context-param>

	<context-param>
		<param-name>dbDriver</param-name>
		<param-value>com.mysql.cj.jdbc.Driver</param-value>
	</context-param>

    <servlet>
        <servlet-name>Login</servlet-name>
        <servlet-class>it.polimi.tiw.bank.controllers.Login</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>Home</servlet-name>
        <servlet-class>it.polimi.tiw.bank.controllers.Home</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Home</servlet-name>
        <url-pattern>/home</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>Authenticate</servlet-name>
        <servlet-class>it.polimi.tiw.bank.controllers.Authenticate</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Authenticate</servlet-name>
        <url-pattern>/authenticate</url-pattern>
    </servlet-mapping>


	<servlet>
        <servlet-name>Register</servlet-name>
        <servlet-class>it.polimi.tiw.bank.controllers.Register</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Register</servlet-name>
        <url-pattern>/register</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>Forget</servlet-name>
        <servlet-class>it.polimi.tiw.bank.controllers.Forget</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Forget</servlet-name>
        <url-pattern>/forget</url-pattern>
    </servlet-mapping>


    <servlet>
        <servlet-name>Delete</servlet-name>
        <servlet-class>it.polimi.tiw.bank.controllers.Delete</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Delete</servlet-name>
        <url-pattern>/delete</url-pattern>
    </servlet-mapping>

</web-app>
